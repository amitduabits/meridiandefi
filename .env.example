# ─────────────────────────────────────────────────────────────
# Meridian — Environment Variables
# Copy to .env and fill in your values
# ─────────────────────────────────────────────────────────────

# LLM Providers
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
OLLAMA_BASE_URL=http://localhost:11434

# EVM RPC URLs
ETH_MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETH_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
ARB_MAINNET_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
ARB_SEPOLIA_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_KEY
BASE_MAINNET_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
OP_MAINNET_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_MAINNET_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
AVAX_MAINNET_RPC_URL=https://avax-mainnet.g.alchemy.com/v2/YOUR_KEY

# Solana RPC URLs
SOLANA_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com

# Wallet (NEVER commit real private keys)
WALLET_PRIVATE_KEY=0x...

# Database
DATABASE_URL=postgresql://meridian:meridian@localhost:5432/meridian
REDIS_URL=redis://localhost:6379
QDRANT_URL=http://localhost:6333

# Flashbots (MEV Protection)
FLASHBOTS_AUTH_KEY=0x...

# Dashboard
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Server
PORT=3001
NODE_ENV=development

# DeFi Rebalancer Example
# RPC_URL is the alias used by examples/defi-rebalancer
RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_KEY
PRIVATE_KEY=0x...         # Testnet-only wallet
DRY_RUN=true              # Set false only when ready for live trading
TICK_INTERVAL_SEC=30      # How often the agent checks (seconds)
DRIFT_THRESHOLD=0.05      # 5% drift triggers rebalance
