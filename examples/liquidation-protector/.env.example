# Anthropic API key (required for Claude risk analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Arbitrum Sepolia RPC URL
ARB_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# Agent wallet private key (with 0x prefix) — the account that will repay debt or add collateral
AGENT_PRIVATE_KEY=0xyour_private_key_here

# Address of the Aave position to monitor (can be the same as agent wallet or a separate address)
AAVE_POSITION_ADDRESS=0xyour_aave_position_address_here

# Health factor thresholds
HEALTH_FACTOR_WARNING=1.3
HEALTH_FACTOR_CRITICAL=1.1

# Dry run — set to false only when you want real transactions
DRY_RUN=true

# Claude model override (optional)
# CLAUDE_MODEL=claude-sonnet-4-5-20250929
